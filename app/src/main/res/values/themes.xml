<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppFullScreenTheme.Dark" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AlertDialogCustom">
        <item name="android:textColor">@color/colorCancelar</item>
        <item name="android:alertDialogTheme" tools:ignore="NewApi">@color/colorSi</item>
    </style>
    <!-- Base application theme. -->

    <!-- LOGIN -->
    <style name="bienvenido">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="edText_logn">
        <item name= "android:hint">Email</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- FIN LOGIN -->

    <!-- VERIFICACIÓN -->
    <style name="Verificacion">
        <item name= "android:textColor">@color/black</item>
        <item name= "android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>
    <!-- FIN VERIFICACIÓN -->
    <style name="NamesLast">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NomDatos">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ResDatos">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#5A5757</item>

    </style>

    <style name="cardView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>

    </style>

    <style name="titles">
        <item name="android:textColor">#B6B2B2</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="title_prins">
        <item name="android:textColor">#B6B2B2</item>
        <item name="android:tint">#88706F6F</item>
        <item name="android:strokeColor">@android:color/white</item>
    </style>

    <style name="tool_bar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="butonn">
        <item name="android:text">"Conectado"</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Linear">
        <item name="android:topLeftRadius">40dp</item>
        <item name="android:topRightRadius">40dp</item>

    </style>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <!-- Cambia el color de fondo de la pestaña seleccionada -->
        <item name="android:selectableItemBackgroundBorderless">@color/colorSeleccionado</item>

        <!-- Cambia el color del texto de la pestaña seleccionada -->
        <item name="tabTextColor">@color/colorTexto</item>
    </style>


    <style name="AppFullTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="Theme.DentiAppDoctor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DentiAppDoctor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="Base.AppFullScreenTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="AppFullScreenTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppFullScreenTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppFullScreenTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




</resources>